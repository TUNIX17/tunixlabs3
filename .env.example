# TunixLabs Environment Variables
# Copy this file to .env.local and fill in your values

# ============================================
# LLM - CEREBRAS (Primary - FREE TIER)
# ============================================
# Get your API key at: https://cloud.cerebras.ai/
# Free tier: 1M tokens/day, Llama 3.3 70B included
CEREBRAS_API_KEY=your_cerebras_api_key_here

# ============================================
# STT - GROQ WHISPER (Most economical)
# ============================================
# Get your API key at: https://console.groq.com/
# Pricing: $0.04/hour (9x cheaper than OpenAI)
GROQ_API_KEY=your_groq_api_key_here

# ============================================
# VOICE SYSTEM (ElevenLabs) - OPTIONAL
# ============================================
# Currently using Web Speech API (free)
# ElevenLabs is optional for higher quality TTS
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# Optional: Specific voice ID (default uses pre-made voice)
ELEVENLABS_VOICE_ID=

# ============================================
# DATABASE (Railway PostgreSQL)
# ============================================
# Get this from Railway dashboard after creating PostgreSQL service
DATABASE_URL=postgresql://user:password@host:port/database

# ============================================
# CRM - EMAIL NOTIFICATIONS (Resend)
# ============================================
# Get your API key at: https://resend.com/
RESEND_API_KEY=re_your_api_key_here
NOTIFICATION_EMAIL=contacto@tunixlabs.com

# ============================================
# CRM - CALENDLY INTEGRATION
# ============================================
# Your Calendly scheduling link (shown to users for direct booking)
CALENDLY_LINK=https://calendly.com/amoyano17/30min
# Webhook signing key from Calendly developer settings
CALENDLY_WEBHOOK_SECRET=

# ============================================
# CRM - WHATSAPP CONTACT
# ============================================
# WhatsApp number for direct contact (format: country code + number, no spaces)
WHATSAPP_NUMBER=56930367979
# Pre-written message for WhatsApp link (URL encoded automatically)
WHATSAPP_MESSAGE=Hola Alejandro! Acabo de hablar con Tunix en tu web y me gustaria agendar una reunion.

# ============================================
# CRM - ADMIN AUTHENTICATION
# ============================================
# Simple password for /admin routes (temporary)
ADMIN_PASSWORD=your_secure_password_here
NEXT_PUBLIC_ADMIN_PASSWORD=your_secure_password_here

# ============================================
# AUTHENTICATION (Future)
# ============================================
# Generate with: openssl rand -base64 32
AUTH_SECRET=your_auth_secret_here

# NextAuth URL (set to your domain in production)
NEXTAUTH_URL=http://localhost:3000

# ============================================
# APPLICATION
# ============================================
# Public URL for the app
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Node environment
NODE_ENV=development

# ============================================
# OPENAI (Future - for conversational AI)
# ============================================
OPENAI_API_KEY=

# ============================================
# RAILWAY DEPLOYMENT
# ============================================
# These are typically set automatically by Railway
# PORT=3000
# RAILWAY_ENVIRONMENT=production
